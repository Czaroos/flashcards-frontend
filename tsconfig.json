{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@fonts/*": ["assets/fonts/*"],
      "@styles/*": ["styles/*"],
      "@components": ["components"],
      "@firebase": ["firebase"],
      "@core/*": ["core/*"],
      "@images/*": ["assets/images/*"],
      "@icons": ["assets/icons"]
    },
  },
  "include": ["./src", "./stories"],
  "exclude": ["node_modules", "**/*.story.*", "**/tests", "dist"]
}